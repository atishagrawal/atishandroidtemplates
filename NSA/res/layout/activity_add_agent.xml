<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nsa.AddAgent" >

    <TextView
        android:id="@+id/txtAddAgent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_add_agent"
        android:textColor="#ffffff"
        android:textSize="8pt" />

    <EditText
        android:id="@+id/edAddAgentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:hint="@string/hint_agent_name" />

    <EditText
        android:id="@+id/edAddAgentCodeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="@string/hint_agent_code_name" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/rounded_edit_text"
        android:onClick="buttonSubmit"
        android:text="@string/str_btn_done" />

</LinearLayout>