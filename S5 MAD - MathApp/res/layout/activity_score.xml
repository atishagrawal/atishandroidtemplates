<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityScore" >

    <TextView
        android:id="@+id/scoreTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Score"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/scoreTextRateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/scoreTextRate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:text="Success Rate:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/scoreButtBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Back"
        android:width="128dp" />

    <TextView
        android:id="@+id/scoreTextRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreTextTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="X%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="48sp" />

    <ToggleButton
        android:id="@+id/scoreToggleUseless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scoreButtBack"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/scoreTextFraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreTextFractionHeader"
        android:layout_centerHorizontal="true"
        android:text="X / Y"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/scoreTextFractionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Correct / Total:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
